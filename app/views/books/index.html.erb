<P>Books#index</P>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>

<p>ユーザーネーム：<%= book.user.name %></p>
<p>タイトル</p>
<span><%= book.title %></span>
<span><%= book.body %></span>

<% if @book.user == current_user %>
  <%= link_to "Destroy", book_path(@book), method: :derete %>
<% end %>


<% end %>