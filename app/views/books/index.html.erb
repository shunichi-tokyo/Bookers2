<P>Books#index</P>

<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<% @books.each do |book| %>

<%= image_tag book.user.get_profile_image(100,100) %>
<p>ユーザーネーム：<%= book.user.name %></p>
<p>タイトル</p>
<%= link_to "Title", book_path(book.id) %>
<span><%= book.title %></span>
<span><%= book.body %></span>

<% end %>