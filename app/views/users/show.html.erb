<p>Users#show</p>



<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

<h3>Book detail</h3>

<% @books.each do |book| %>
<div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <%= link_to "title", book_path(book.id) %>
    <%= book.title %>
    <p>Opinion:<%= book.body %></p>
    <p>name:<%= book.user.name %></p>
</div>

<% end %>