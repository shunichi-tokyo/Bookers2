<div>
    <h3>User info</h3>
    <%= image_tag @user.get_profile_image(100,100) %>
    <p>name:<%= @user.name %></p>
    <p>Introduction:<%= @user.introduction %></p>

    <p><%= link_to "User edit", edit_user_path %></p>
</div>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>